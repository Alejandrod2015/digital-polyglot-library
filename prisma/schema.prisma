generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Favorite {
  id          String   @id @default(cuid())
  userId      String
  word        String
  translation String
  createdAt   DateTime @default(now())

  @@index([userId])
  @@unique([userId, word], name: "userId_word")
}

model LibraryBook {
  id        String   @id @default(cuid())
  userId    String
  bookId    String
  title     String
  coverUrl  String
  createdAt DateTime @default(now())

  @@index([userId])
  @@unique([userId, bookId], name: "userId_bookId")
}

model LibraryStory {
  id        String   @id @default(cuid())
  userId    String
  storyId   String
  title     String
  coverUrl  String
  bookId    String
  createdAt DateTime @default(now())

  @@index([userId])
  @@unique([userId, storyId], name: "userId_storyId")
}

model ClaimToken {
  id             String    @id @default(cuid())
  token          String    @unique
  buyerEmail     String
  recipientEmail String?
  books          String[]
  redeemedBy     String?
  redeemedAt     DateTime?
  createdAt      DateTime  @default(now())
  expiresAt      DateTime?

  @@map("dp_claim_tokens_v1")
  @@index([buyerEmail])
  @@index([recipientEmail])
  @@index([redeemedBy])
  @@index([createdAt])
}

model UserStory {
  id            String   @id @default(cuid())
  userId        String
  title         String
  slug          String   @unique
  text          String
  vocab         Json
  audioUrl      String?
  audioFilename String?
  language      String
  region        String?
  level         String
  focus         String?
  topic         String
  public        Boolean  @default(true)
  coverUrl      String?
  coverFilename String?
  createdAt     DateTime @default(now())

  @@map("dp_user_stories_v1")
  @@index([userId])
  @@index([createdAt])
}

model UserMetric {
  id         String   @id @default(cuid())
  userId     String
  bookSlug   String?
  storySlug  String
  eventType  String   // "audio_play", "audio_pause", "audio_complete", "scroll", etc.
  value      Float?
  metadata   Json?
  createdAt  DateTime @default(now())

  @@map("dp_user_metrics_v1")
  @@index([userId])
  @@index([storySlug])
  @@index([createdAt])
}

model WeeklyMetricsSnapshot {
  id             String   @id @default(cuid())
  weekStart      DateTime
  weekEnd        DateTime
  totalPlays     Int
  totalCompletions Int
  avgCompletionRate Float
  avgDuration    Float?
  createdAt      DateTime @default(now())

  @@map("dp_weekly_metrics_v1")
  @@index([weekStart])
  @@index([weekEnd])
}
